<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Movie_View">

    <TextView
        android:id="@+id/movieTitleHeader"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Title here"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/movieBannerImage"
        android:layout_width="207dp"
        android:layout_height="263dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieTitleHeader"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/movieSynopsis"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Synopsis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieBannerImage"
        app:layout_constraintVertical_bias="0.017" />

    <TableLayout
        android:layout_width="403dp"
        android:layout_height="193dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationY="10dp"
        app:layout_constraintTop_toBottomOf="@+id/movieSynopsis"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/movieLocation"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:text="Location" />


            <TextView
                android:id="@+id/movieDate1"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:text="Date" />

            <TextView
                android:id="@+id/movieDate2"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:text="Date" />

            <TextView
                android:id="@+id/movieDate3"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:text="Date" />

        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/movieTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time" />

            <TextView
                android:id="@+id/movieTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time" />

            <TextView
                android:id="@+id/movieTime3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Time"
                />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>